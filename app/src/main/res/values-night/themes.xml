<resources>
    <!-- Base application theme for Night. -->
    <style name="Theme.LiLO" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lilo_primary_500</item>
        <item name="colorPrimaryVariant">@color/lilo_primary_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item> -->
        <item name="colorSecondary">@color/lilo_primary_500</item>
        <item name="colorSecondaryVariant">@color/lilo_primary_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!--<item name="android:colorBackground">?attr/colorOnPrimary</item>-->
    </style>

    <!-- Theme without Action Bar. -->
    <style name="Theme.LiLO.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lilo_primary_500</item>
        <item name="colorPrimaryVariant">@color/lilo_primary_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorSecondary">@color/lilo_primary_500</item>
        <item name="colorSecondaryVariant">@color/lilo_primary_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.LiLO.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.LiLO.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
</resources>